# Azure AI Projects Configuration (for Bing Grounding Tool)
# Replace these values with your actual Azure AI Projects credentials

# Azure AI Projects connection string
AZURE_AI_PROJECTS_CONNECTION_STRING=your_connection_string_here

# Azure client ID for workload identity
AZURE_CLIENT_ID=your_client_id_here

# Azure tenant ID
AZURE_TENANT_ID=your_tenant_id_here

# Path to federated token file
AZURE_FEDERATED_TOKEN_FILE=/path/to/your/federated_token_file

# Optional: Azure region
AZURE_REGION=uaenorth

# Legacy Azure Cognitive Services Configuration (for standard Bing Search API)
# Your Azure Cognitive Services subscription key
AZURE_COGNITIVE_SERVICES_KEY=your_subscription_key_here

# Your Azure Cognitive Services endpoint URL
AZURE_COGNITIVE_SERVICES_ENDPOINT=https://your-resource-name.cognitiveservices.azure.com/ 